{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ivir3zam.github.io/.well-known/whois-presentation.schema.json",
  "title": "WhoIsPresentation (W3C VCDM v1 + Ed25519Signature2018 + jws)",
  "type": "object",
  "additionalProperties": true,
  "required": [
    "@context",
    "type",
    "holder",
    "verifiableCredential",
    "proof",
    "presentationSchema",
    "id"
  ],
  "properties": {
    "@context": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": [
          "string",
          "object"
        ]
      }
    },
    "id": {
      "type": "string"
    },
    "type": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string"
      },
      "allOf": [
        {
          "contains": {
            "const": "VerifiablePresentation"
          }
        }
      ]
    },
    "holder": {
      "type": "string"
    },
    "verifiableCredential": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object"
      }
    },
    "presentationSchema": {
      "type": "object",
      "required": [
        "id",
        "type"
      ],
      "additionalProperties": true,
      "properties": {
        "id": {
          "type": "string"
        },
        "type": {
          "type": "string"
        }
      }
    },
    "proof": {
      "$ref": "#/$defs/w3cProof"
    }
  },
  "$defs": {
    "w3cProof": {
      "type": "object",
      "additionalProperties": true,
      "required": [
        "type",
        "created",
        "verificationMethod",
        "proofPurpose",
        "jws"
      ],
      "properties": {
        "type": {
          "const": "Ed25519Signature2018"
        },
        "created": {
          "type": "string",
          "format": "date-time"
        },
        "verificationMethod": {
          "type": "string"
        },
        "proofPurpose": {
          "const": "assertionMethod"
        },
        "jws": {
          "type": "string"
        }
      }
    }
  }
}
